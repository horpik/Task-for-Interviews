<Window x:Class="Task1.View.Pages.ClientPage.AddClientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Task1.View.Pages.ClientPage"
        mc:Ignorable="d"
    Title="AddClientDialog" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
 
        <TextBlock>Введите данные клиента:</TextBlock>
        <TextBox Name="NameBox" Grid.Row="1" MinWidth="250">Имя</TextBox>
        <TextBox Name="StatusIdBox" Grid.Row="2" MinWidth="250">Статус Id</TextBox>
        <TextBox Name="ManagerIdBox" Grid.Row="3" MinWidth="250">Менеджер Id</TextBox>
 
        <WrapPanel Grid.Row="4" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Click="ButtonBase_OnClick" MinWidth="60" Margin="0,0,10,0">OK</Button>
            <Button IsCancel="True" MinWidth="60">Отмена</Button>
        </WrapPanel>
 
    </Grid>
</Window>
